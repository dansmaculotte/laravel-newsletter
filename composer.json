{
    "name": "dansmaculotte/laravel-newsletter",
    "description": "Manage newsletters in Laravel",
    "keywords": [
        "laravel",
        "newsletter",
        "mailchimp"
    ],
    "homepage": "https://github.com/dansmaculotte/laravel-newsletter",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://murze.be",
            "role": "Developer"
        },
        {
            "name": "Martin Potel",
            "email": "martin@dansmaculotte.fr",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.2",
        "illuminate/support": "~5.8.0"
    },
    "require-dev": {
        "drewm/mailchimp-api": "^2.4",
        "orchestra/testbench": "^3.8",
        "phpunit/phpunit" : "^8.0",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\Newsletter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\Newsletter\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit",
        "coverage": "@php vendor/bin/phpunit --coverage-html coverage",
        "format": "@php vendor/bin/php-cs-fixer fix --config .php_cs.php"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\Newsletter\\NewsletterServiceProvider"
            ],
            "aliases": {
                "Newsletter": "Spatie\\Newsletter\\NewsletterFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
